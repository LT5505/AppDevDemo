<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 顶部导航栏 radioButton 样式 -->
    <style name="main_rbt_style" parent="@android:style/Widget.CompoundButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/main_rb_bg_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_rbt_txt_color_selector</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingBottom">@dimen/main_rb_padding_top_bottom</item>
        <item name="android:paddingTop">@dimen/main_rb_padding_top_bottom</item>
    </style>
</resources>
