<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/image_text_btn_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Top"
        android:drawableTop="@mipmap/ic_launcher_round"
        android:drawableBottom="@mipmap/ic_launcher_round"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/image_text_btn_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Bottom"
        android:drawableBottom="@mipmap/ic_launcher_round"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/image_text_btn_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Left"
        android:drawableLeft="@mipmap/ic_launcher_round"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/image_text_btn_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Right"
        android:drawableRight="@mipmap/ic_launcher_round"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/image_text_btn_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"/>

</LinearLayout>
</ScrollView>